export const propsList = {
  labelWidth: {
    type: String,
    default: '100px'
  },
  // item.type: 是关于插槽需要显示的位置 slot（显示在el-form-item里面） | colSlot（显示在el-col里面）
  formItems: {
    type: Array,
    default: () => []
  },
  modelValue: {
    type: Object,
    required: true
  },
  itemStyle: {
    type: Object,
    default: () => {}
  },
  colLayout: {
    type: Object,
    default: () => ({
      xl: 6, // >1920px 4个
      lg: 8,
      md: 12,
      sm: 24,
      xs: 24
    })
  },
  showLine: { // 显示页脚分割线
    type: Boolean,
    default: false
  },
  isVerify: { // 表单是否需要验证
    type: Boolean,
    default: false
  }

}
